<UserControl x:Class="InformationSecurityConference.CustomControls.BindablePasswordBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InformationSecurityConference.CustomControls"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="800">

    <PasswordBox x:Name="txtPassword" PasswordChanged="OnPasswordChanged"
             MaxLength="12"
             FontSize="13"
             FontWeight="Medium"
             FontFamily="Montserrat"                            
             Foreground="White"
             CaretBrush="LightGray"
             BorderBrush="DarkGray"
             Background="Transparent"
             BorderThickness="0,0,0,2"
             VerticalContentAlignment="Center"/>
</UserControl>
